{
  "name": "zero-packages",
  "private": true,
  "devDependencies": {
    "lerna": "^3.22.1"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "diff": "lerna diff",
    "build": "lerna run build",
    "prettier": "prettier --parser typescript --write 'src/**/*.{ts,tsx}'",
    "lint": "eslint src/**/*.{ts,tsx} --quiet --fix"
  }
}
