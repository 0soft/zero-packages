{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "lib": ["es6", "es7", "dom"],
        "sourceMap": true,
        "allowJs": false,
        "jsx": "react",
        "moduleResolution": "node",
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "strictNullChecks": true,
        "experimentalDecorators": true,
        "declaration": true,
        "allowSyntheticDefaultImports": true,
        "emitDecoratorMetadata": true,
        "forceConsistentCasingInFileNames": true,
        "esModuleInterop": true,
        "noUnusedParameters": false,
        "skipLibCheck": true,
        "importHelpers": true,
        "removeComments": true,
        "declarationMap": true,
    },
    "include": ["packages"],
}